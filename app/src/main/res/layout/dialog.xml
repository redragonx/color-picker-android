<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/developedby"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:id="@+id/developer" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/website"
            android:layout_weight="1"
            android:text="@string/website"
            android:textColor="@color/dialogcolor"
            style="?android:borderlessButtonStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/github"
            android:layout_weight="1"
            android:text="@string/github"
            android:textColor="@color/dialogcolor"
            style="?android:borderlessButtonStyle" />

    </LinearLayout>


    <com.wefika.flowlayout.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/usedcodetext"
            android:textSize="16sp"
            android:id="@+id/UsedcodeTextView" />

    </com.wefika.flowlayout.FlowLayout>

</LinearLayout>